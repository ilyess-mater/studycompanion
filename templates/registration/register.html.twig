{% extends 'base.html.twig' %}

{% block title %}Sign up | StudyCompanion+{% endblock %}

{% block layout %}
    <div class="auth-wrap">
        <section class="auth-card">
            <h1>Create account</h1>
            <p>Choose your role and start the personalized learning cycle.</p>

            {{ form_start(registrationForm, {attr: {class: 'form-grid', style: 'margin-top:1.2rem;', 'data-turbo': 'false'}}) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.role) }}
                {{ form_row(registrationForm.grade) }}
                {{ form_row(registrationForm.plainPassword) }}
                <button type="submit" class="btn-primary">Create account</button>
            {{ form_end(registrationForm) }}

            <p style="margin-top: 1rem;">Already registered? <a href="{{ path('app_login') }}" style="color: var(--brand); font-weight:700;">Sign in</a></p>
        </section>
    </div>
{% endblock %}
