{% extends 'base.html.twig' %}

{% block title %}Lessons | StudyCompanion+{% endblock %}

{% block body %}
    <div class="grid grid-2">
        <section class="card">
            <h2>Upload Lesson</h2>
            <p>Accepted formats: PDF, DOCX, PPTX, TXT. AI analysis starts automatically.</p>
            {{ form_start(lessonForm, {attr: {class: 'form-grid'}}) }}
                {{ form_row(lessonForm.title) }}
                {{ form_row(lessonForm.subject) }}
                {{ form_row(lessonForm.lessonFile) }}
                <button type="submit" class="btn-primary">Upload and analyze</button>
            {{ form_end(lessonForm) }}
        </section>

        <section class="card">
            <h2>Your Lessons</h2>
            <div class="list">
                {% for lesson in lessons %}
                    <a class="list-item" href="{{ path('student_lesson_show', {id: lesson.id}) }}">
                        <div>
                            <strong>{{ lesson.title }}</strong>
                            <div class="note">{{ lesson.subject }} | {{ lesson.createdAt|date('Y-m-d H:i') }}</div>
                        </div>
                        <span class="badge {{ lesson.processingStatus.value == 'DONE' ? 'badge-done' : (lesson.processingStatus.value == 'FAILED' ? 'badge-failed' : 'badge-pending') }}">{{ lesson.processingStatus.value }}</span>
                    </a>
                {% else %}
                    <p class="note">No uploaded lessons yet.</p>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}
