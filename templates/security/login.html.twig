{% extends 'base.html.twig' %}

{% block title %}Sign in | StudyCompanion+{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if turnstileEnabled and turnstileSiteKey is not empty %}
        <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    {% endif %}
{% endblock %}

{% block layout %}
    <div class="auth-scene">
        <div class="auth-bubbles" aria-hidden="true">
            <span class="bubble bubble-a"></span>
            <span class="bubble bubble-b"></span>
            <span class="bubble bubble-c"></span>
            <span class="bubble bubble-d"></span>
            <span class="bubble bubble-e"></span>
        </div>

        <section class="auth-shell">
            <aside class="auth-brand">
                <a class="brand-lockup" href="{{ path('app_entrypoint') }}">
                    <span class="logo-mark" aria-hidden="true">
                        <span class="logo-core">SC</span>
                        <span class="logo-plus">+</span>
                    </span>
                    <span class="brand-meta">
                        <span class="brand-title glow-text">StudyCompanion+</span>
                        <span class="brand-subtitle">Personalized AI Tutor</span>
                    </span>
                </a>

                <h1>Welcome back</h1>
                <p>Sign in to continue your smart study loop, track mastery, and stay focused with adaptive training.</p>
                <div class="auth-chips">
                    <span>Role-Based Access</span>
                    <span>Adaptive Quizzes</span>
                    <span>Mastery Reports</span>
                </div>
            </aside>

            <div class="auth-card">
                <h2>Sign in</h2>
                <p>Continue your personalized study workflow.</p>

                {% if error %}
                    <div class="flash flash-error auth-flash">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}" class="form-grid auth-form" data-turbo="false">
                    <div>
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" autocomplete="current-password" required>
                    </div>

                    <label class="remember-row">
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>

                    {% if turnstileEnabled and turnstileSiteKey is not empty %}
                        <div class="captcha-block">
                            <div class="cf-turnstile" data-sitekey="{{ turnstileSiteKey }}"></div>
                        </div>
                    {% endif %}

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit" class="btn-primary">Sign in</button>
                </form>

                <p class="auth-switch">New account? <a href="{{ path('app_register') }}">Create one</a></p>
            </div>
        </section>
    </div>
{% endblock %}
