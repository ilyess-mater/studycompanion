<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}StudyCompanion+{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&family=Sora:wght@500;600;700;800&display=swap" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="{% if app.user %}app-authenticated{% else %}app-guest{% endif %}">
{% block layout %}
    {% set currentRoute = app.request.attributes.get('_route') %}
    {% if app.user %}
        <div class="app-layout">
            <aside class="sidebar">
                <a class="brand-lockup" href="{{ path('app_entrypoint') }}">
                    <span class="logo-mark" aria-hidden="true">
                        <span class="logo-core">SC</span>
                        <span class="logo-plus">+</span>
                    </span>
                    <span class="brand-meta">
                        <span class="brand-title glow-text">StudyCompanion+</span>
                        <span class="brand-subtitle">
                            {% if is_granted('ROLE_TEACHER') %}
                                Teacher Control Center
                            {% else %}
                                Student Learning Space
                            {% endif %}
                        </span>
                    </span>
                </a>

                <nav class="sidebar-nav" aria-label="Main">
                    {% if is_granted('ROLE_STUDENT') %}
                        <a class="sidebar-link {{ currentRoute == 'student_dashboard' ? 'is-active' : '' }}" href="{{ path('student_dashboard') }}">Dashboard</a>
                        <a class="sidebar-link {{ currentRoute starts with 'student_lessons' or currentRoute == 'student_lesson_show' ? 'is-active' : '' }}" href="{{ path('student_lessons') }}">Lessons</a>
                        <a class="sidebar-link {{ currentRoute == 'student_reports' ? 'is-active' : '' }}" href="{{ path('student_reports') }}">Reports</a>
                        <a class="sidebar-link {{ currentRoute == 'student_group_join' ? 'is-active' : '' }}" href="{{ path('student_group_join') }}">Join Group</a>
                    {% endif %}
                    {% if is_granted('ROLE_TEACHER') %}
                        <a class="sidebar-link {{ currentRoute == 'teacher_dashboard' ? 'is-active' : '' }}" href="{{ path('teacher_dashboard') }}">Dashboard</a>
                        <a class="sidebar-link {{ currentRoute starts with 'teacher_group' ? 'is-active' : '' }}" href="{{ path('teacher_groups') }}">Groups</a>
                        <a class="sidebar-link {{ currentRoute starts with 'teacher_lesson' ? 'is-active' : '' }}" href="{{ path('teacher_lessons') }}">Lessons</a>
                        <a class="sidebar-link {{ currentRoute == 'teacher_reports' or currentRoute == 'teacher_student_show' ? 'is-active' : '' }}" href="{{ path('teacher_reports') }}">Reports</a>
                        <a class="sidebar-link {{ currentRoute == 'teacher_comments' ? 'is-active' : '' }}" href="{{ path('teacher_comments') }}">Comments</a>
                    {% endif %}
                </nav>

                <a class="sidebar-link sidebar-logout" href="{{ path('app_logout') }}">Sign out</a>
            </aside>

            <main class="app-main">
                {% for message in app.flashes('success') %}
                    <div class="flash flash-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="flash flash-error">{{ message }}</div>
                {% endfor %}
                {{ block('body') }}
            </main>
        </div>
    {% else %}
        <div class="shell shell-guest">
            {% for message in app.flashes('success') %}
                <div class="flash flash-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="flash flash-error">{{ message }}</div>
            {% endfor %}
            {{ block('body') }}
        </div>
    {% endif %}
{% endblock %}
</body>
</html>
